<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PocketManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PocketManager.Veiw.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="false"
    Shell.BackgroundColor="DarkCyan">

    <TabBar>
        <ShellContent
            Title="LoginPage"
            ContentTemplate="{DataTemplate local:LoginPage}"
            Route="LoginPage" />
        
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:MainPage}"
            Icon="icon_home" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate view:AboutPage}"
            Icon="icon_about" />

        <ShellContent
            Title="Preferences"
            ContentTemplate="{DataTemplate view:PreferencesPage}"
            Icon="icon_prefs" />

        <ShellContent
            Title="Buddies"
            ContentTemplate="{DataTemplate view:BuddiesPage}"
            Icon="icon_buddies" />
    </TabBar>
</Shell>
