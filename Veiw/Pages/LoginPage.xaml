<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PocketManager.Veiw.Pages.LoginPage">

    <!--BOOK at 168 page-->
    <ScrollView VerticalScrollBarVisibility="Always" HorizontalScrollBarVisibility="Always">

        <VerticalStackLayout Background="#faff" x:Name="LoginStackLayout" VerticalOptions="Fill" >
            <Grid RowDefinitions="*,*,80">
                <VerticalStackLayout Background="#faff" Grid.Row="0" VerticalOptions="Center" >
                    <Grid ColumnDefinitions="*,*,*" 
                          RowDefinitions="200,*,*,*,*" 
                          x:Name="LoginGrid">

                        <Label Text="Login or create account" 
                               Grid.Column="0"
                               Grid.ColumnSpan="3"
                               Grid.Row="1"
                               FontSize="22"
                               Margin="10"
                               TextTransform="Uppercase"
                               FontAttributes="Bold"
                               FontAutoScalingEnabled="True"
                               TextColor="#51b"
                               HorizontalOptions="Center">

                        </Label>
                        <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="10" WidthRequest="300" HorizontalOptions="Fill" >
                            <Entry Text="{Binding email}"                       
                                   HorizontalOptions="EndAndExpand"
                                   Placeholder="Email"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   MinimumWidthRequest="200"
                                   WidthRequest="300"
                                   MaximumHeightRequest="500"
                                   />
                        </HorizontalStackLayout>
                        
                        <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="10" WidthRequest="300"  HorizontalOptions="Fill" >
                            <Entry Text="{Binding Password}"
                                   HorizontalOptions="EndAndExpand"
                                   Placeholder="Password"
                                   IsPassword="True"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   MinimumWidthRequest="200"
                                   WidthRequest="300"
                                   MaximumHeightRequest="500"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,10,10,0" HorizontalOptions="Center" >
                            <Button Command="{Binding LogInCommand}"
                                    BackgroundColor="#faf"
                                    TextColor="#fff" 
                                    FontAttributes="Bold"
                                    Margin="5"
                                    MinimumWidthRequest="90"
                                    WidthRequest="140"
                                    MaximumHeightRequest="240"
                                    Text="LogIn"/>

                            <Button Command="{Binding SignUpCommand}"
                                    BackgroundColor="#afa"                    
                                    TextColor="#fff"
                                    FontAttributes="Bold"
                                    Margin="5"   
                                    MinimumWidthRequest="90"
                                    WidthRequest="140"
                                    MaximumHeightRequest="240"
                                    Text="SignUp" />

                        </HorizontalStackLayout>
                    </Grid>
                </VerticalStackLayout>


                <!--TODO: Bind ActivityIndicator to something, ex: Create account, of check existing Emeil or-->
                <!--<ActivityIndicator Margin="20" Color="#ffbeaa" IsRunning="{Binding ActivityIndicatorIsRunning}" />-->
            </Grid>
            <VerticalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" VerticalOptions="End" HorizontalOptions="Center">
                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="End" >
                    <Button Command="{Binding ForgotPasswordCommand}"
                            HorizontalOptions="Center"
                            BackgroundColor="LightGray"
                            TextColor="#fff"
                            FontAttributes="None"
                            Margin="10"
                            Text="Forgot Password" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <FlexLayout Grid.Row="2" Grid.ColumnSpan="3" VerticalOptions="Center" Opacity="0.70"
                        HorizontalOptions="Center" Background="gray" HeightRequest="80" WidthRequest="500"
                        Wrap="Wrap">
                <Label Text="Here may be your ad... Or may not"
                       VerticalOptions="Center"
                       FontSize="20"
                       TextColor="#fff"
                       FontAttributes="None"
                       Margin="5"/>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>




